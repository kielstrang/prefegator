<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/_head.ejs%>
    <script type="text/javascript" src="/scripts/vote.js"></script>
  </head>
  <body>
    <% include partials/_header.ejs%>
  <div class="container text-center page-content">
    <h1><%= poll.name %></h1>
    <p><%= poll.desc %> </p>
      <div class="container">
        <form id="vote-poll-form" method="POST" action=<%= `/polls/${id}` %>>
          <ul class="list-group" id="sortable">
            <% for(const option of poll.options) { %>
              <li class="list-group-item ui-state-default">
                <div class="row">
                  <div class="col">
                    <span class="item ui-icon ui-icon-arrowthick-2-n-s" ><%= option.name %></span>
                  </div>
                  <div class="col">
                    <span class="ui-icon ui-icon-arrowthick-2-n-s"><%= option.desc %></span>
                  </div>
                </div>
              </li>
            <% } %>
          </ul>
          <div>
            <button class="submit btn">Submit</button>
          </div>
        </form>
        <% include partials/_footer.ejs%>
    </div>
  </body>
</html>
